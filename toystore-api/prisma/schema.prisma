generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
}

model Client {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  birthday  DateTime
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  Sale Sale[]
}

model Sale {
  id        String   @id @default(uuid())
  date      DateTime
  value     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  @@index([date])
  @@index([clientId, date])
}
